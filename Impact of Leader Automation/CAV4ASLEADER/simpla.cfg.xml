<configuration>
   
    <vTypeMap original="CAV2"
             follower="t_follower"
            catchup="t_catchup"
            catchupFollower="t_catchupFollower"/>

    <vTypeMap original="CAV4" leader="t_leader"/>


    <vehicleSelectors>
        <vehicleSelector id="leaderSelector">
            <typeCriterion vType="CAV4"/>
        </vehicleSelector>
        <vehicleSelector id="followerSelector">
            <typeCriterion vType="CAV2"/>
        </vehicleSelector>
    </vehicleSelectors>

    <vehicleSelectors></vehicleSelectors> 
    <verbosity value="4" />
    <controlRate value="1" />

    <!-- optimization parameters -->
    <maxPlatoonGap value="15" />  <!-- Reduce maximum platoon gap to improve platoon efficiency -->
    <catchupDist value="80" />    <!-- Slightly reduce catch-up distance for faster platoon formation -->
    <useHeadway value="true" />   <!-- Enable headway control to improve platoon stability -->

    <switchImpatienceFactor value="-1" />
    <platoonSplitTime value="2" />  <!-- Reduce split time to improve platoon flexibility -->

    <!-- Optimization lane change mode -->
    <lcMode original="594" leader="1621" follower="1621" catchupFollower="1621" />

    <!-- key optimization: increase platooning vehicle speed factor -->
    <speedFactor original="-1" leader="1.0" follower="1.3" catchup="1.15"/>

    <!-- appropriately increase maximum number of platooning vehicles -->
    <maxVehicles value="6"/>
</configuration>
